{
"scripts": {
  "sleep5s": "node -e \"setTimeout(() => process.exit(0), 5000)\"",
  "start:auth": "node microservices/auth-microservice.js",
  "start:vitalSigns": "node microservices/vital-signs-microservice.js",
  "start:gateway": "npm run sleep5s && node gateway.js",
  "start:all": "concurrently -k -n \"AUTH,VITALS,GATEWAY\" -c \"green,blue,magenta\" \"npm run start:auth\" \"npm run start:vitalSigns\" \"npm run start:gateway\""
},
  "dependencies": {
    "@apollo/federation": "^0.38.1",
    "@apollo/gateway": "^2.9.3",
    "apollo-server-express": "^3.13.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "express": "^4.21.1",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.8.1"
  },
  "devDependencies": {
    "concurrently": "^9.1.0"
  }
}
